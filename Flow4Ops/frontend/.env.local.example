# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_TIMEOUT=30000  # 30 seconds

# Supabase Configuration (for direct Storage access from frontend)
NEXT_PUBLIC_SUPABASE_URL=https://[YOUR_PROJECT_REF].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# Application Settings
NEXT_PUBLIC_APP_NAME=Flow4Ops
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags (toggle features without deploying)
NEXT_PUBLIC_ENABLE_DARK_MODE=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# File Upload Settings
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg,docx,xlsx

# Environment (for conditional logic)
NEXT_PUBLIC_ENV=development  # development | staging | production